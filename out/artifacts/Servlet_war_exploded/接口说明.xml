<servlet>
    <login>
        <class-name>
            servletserver.UserLogin
        </class-name>
        <method>
            POST
        </method>
        <param>
            <String>
                account
            </String>
            <String>
                password
            </String>
            <String att = "unique">
                imei
            </String>
        </param>
        <result Type = 'json-Map'>
            {
                login:'true'/'false',
                token:'true'/'false'
            }
        </result>
    </login>

    <register>
        <class-name>
            servletserver.UserRegister
        </class-name>
        <method>
            POST
        </method>
        <param>
            <String>
                account
            </String>
            <String>
                password
            </String>
            <String>
                school
            </String>
            <String>
                job
            </String>
        </param>
        <result type = 'json-Map'>
            {
                register : 'true'/'false'
            }
        </result>
    </register>

</servlet>


