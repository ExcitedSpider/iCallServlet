<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>servletserver.UserLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserRegisterServlet</servlet-name>
        <servlet-class>servletserver.UserRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateClassServlet</servlet-name>
        <servlet-class>servletserver.CreateClass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateClassServlet</servlet-name>
        <url-pattern>/class/create</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DismissClassServlet</servlet-name>
        <servlet-class>servletserver.DismissClass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DismissClassServlet</servlet-name>
        <url-pattern>/class/dismiss</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>JoinClassServlet</servlet-name>
        <servlet-class>servletserver.JoinClass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JoinClassServlet</servlet-name>
        <url-pattern>/class/join</url-pattern>
    </servlet-mapping>
</web-app>